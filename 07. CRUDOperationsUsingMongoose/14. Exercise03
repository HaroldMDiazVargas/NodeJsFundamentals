Exercise 3
    - Get all the published courses that are $15 or more, or 
      have the word 'by' in their title


-- exercise3.js SOL1


....

async function getCourses(){
    return await Course.findOne()
        .find()
        .or([
            {isPublished: true}, 
            {price: {$gte: 15}}, 
            {name:  /.*by.*/i } ]);
       
}

-- exercise3.js SOL2
async function getCourses(){
    return await Course.findOne()
        .find( { $or: [
            {isPublished: true }, 
            {price: {$gte: 15} }, 
            {name: {$regex: /.*by.*/}}
            ] } );

}


